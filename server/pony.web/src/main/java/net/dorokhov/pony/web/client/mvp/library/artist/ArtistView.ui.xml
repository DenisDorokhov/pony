<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:p="urn:import:net.dorokhov.pony.web.client.control">

    <ui:style>
        .artistView {
            border-left-width: 0;
            border-right-width: 0;
            padding: 10px;
        }
        .artistView:first-child {
            border-top-width: 0;
        }
        .artistView:last-child {
            border-bottom-width: 0;
        }
        .artwork {
            float: left;
            width: 50px;
            height: 50px;
        }
        .name {
            line-height: 50px;
            margin-left: 60px;
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
        }
    </ui:style>

    <b:LinkedGroupItem addStyleNames="{style.artistView}">
        <p:ImageLoader ui:field="artworkImage" addStyleNames="{style.artwork}" />
        <g:Label ui:field="nameLabel" addStyleNames="{style.name}" />
    </b:LinkedGroupItem>

</ui:UiBinder>