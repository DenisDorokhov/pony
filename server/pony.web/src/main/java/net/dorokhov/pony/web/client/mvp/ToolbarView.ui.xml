<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">

    <ui:with field="mes" type="net.dorokhov.pony.web.client.Messages" />

    <ui:style>
        .container {
            margin-top: 20px;
            text-align: right;
        }
        .settingsButton {
            margin-right: 10px;
        }
    </ui:style>

    <b.html:Div addStyleNames="{style.container}">

        <b:Button ui:field="settingsButton" addStyleNames="{style.settingsButton}"
                  text="{mes.toolbarSettings}" icon="GEAR" iconPosition="RIGHT" />

        <b:ButtonGroup>
            <b:Button ui:field="currentUserButton" dataToggle="DROPDOWN"
                      icon="USER" iconPosition="RIGHT" />
            <b:DropDownMenu>
                <b:AnchorListItem ui:field="editProfileButton">Edit Profile</b:AnchorListItem>
                <b:AnchorListItem ui:field="logoutButton">Sign Out</b:AnchorListItem>
            </b:DropDownMenu>
        </b:ButtonGroup>

    </b.html:Div>

</ui:UiBinder>