<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:p="urn:import:net.dorokhov.pony.web.client.control.status">

    <ui:with field="mes" type="net.dorokhov.pony.web.client.resource.Messages" />

    <ui:style>
        .container {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }
        .panel {
            margin-bottom: 0;
        }
        .artistList {
            height: 100%;
            margin-bottom: 0;
            overflow-y: auto;
        }
    </ui:style>

    <g:FlowPanel addStyleNames="{style.container}">
        <b:Panel addStyleNames="{style.container} {style.panel}">
            <g:FlowPanel addStyleNames="{style.container}">
                <b:LinkedGroup ui:field="artistList" addStyleNames="{style.artistList}" />
            </g:FlowPanel>
            <p:LoadingIndicator ui:field="loadingIndicator" />
            <p:ErrorIndicator ui:field="errorIndicator" />
            <p:EmptyIndicator ui:field="emptyIndicator" text="{mes.statusArtistListEmpty}" />
        </b:Panel>
    </g:FlowPanel>

</ui:UiBinder>