<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field="mes" type="net.dorokhov.pony.web.client.Messages" />

    <ui:style>
        .loginContainer {
            padding-top: 40px;
            padding-bottom: 40px;
        }
        .loginPanel {
            width: 400px;
            margin-left: auto;
            margin-right: auto;
        }
    </ui:style>

    <b:Container addStyleNames="{style.loginContainer}">

        <b:Panel addStyleNames="{style.loginPanel}">

            <b:PanelHeader>
                <b:Heading size="H3" text="{mes.loginViewHeader}"/>
            </b:PanelHeader>

            <b:PanelBody>
                <b:Form>
                    <b:FieldSet>

                        <b:FormGroup>
                            <b:FormLabel for="loginView.emailField" text="{mes.loginViewEmail}" />
                            <b:Input ui:field="emailField" type="TEXT" b:id="loginView.emailField" />
                        </b:FormGroup>

                        <b:FormGroup>
                            <b:FormLabel for="loginView.passwordField" text="{mes.loginViewPassword}" />
                            <b:Input ui:field="passwordField" type="PASSWORD" b:id="loginView.passwordField" />
                        </b:FormGroup>

                        <b:Button ui:field="loginButton" text="{mes.loginViewLoginButton}" />

                    </b:FieldSet>
                </b:Form>
            </b:PanelBody>

        </b:Panel>

    </b:Container>

</ui:UiBinder>