<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field="mes" type="net.dorokhov.pony.web.client.message.Messages" />

    <ui:style>
        .container {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }
        .panel {
            margin-bottom: 0;
        }
        .list {
            overflow-y: scroll;
        }
        .statusLabel {
            margin-top: 2em;
            text-align: center;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.container}">
        <b:Panel addStyleNames="{style.container} {style.panel}">
            <b:LinkedGroup ui:field="artistList" addStyleNames="{style.container} {style.list}" />
            <g:Label ui:field="loadingLabel" styleName="{style.container} {style.statusLabel}" text="{mes.statusLoading}" />
            <g:Label ui:field="errorLabel" styleName="{style.container} {style.statusLabel}" text="{mes.statusError}" />
        </b:Panel>
    </g:HTMLPanel>

</ui:UiBinder>