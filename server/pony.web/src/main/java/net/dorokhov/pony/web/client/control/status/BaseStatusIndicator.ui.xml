<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .loadingIndicator {
            line-height: 28px;
            margin-top: 2em;
            text-align: center;
        }
        .image {
            width: 28px;
            height: 28px;
            margin-right: 10px;
        }
    </ui:style>

    <g:FlowPanel addStyleNames="{style.loadingIndicator}">
        <g:Image ui:field="image" addStyleNames="{style.image}" />
        <g:InlineLabel ui:field="textLabel" />
    </g:FlowPanel>

</ui:UiBinder>