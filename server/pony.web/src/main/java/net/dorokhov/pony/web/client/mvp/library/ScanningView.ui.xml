<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field="mes" type="net.dorokhov.pony.web.client.resource.Messages" />

    <ui:style>
        .scanningView {
            overflow-y: auto;
        }
        .scanningView > div {
            width: 1000px !important;
        }
        .section {
            clear: both;
        }
        .label {
            float: left;
            width: 80px;
            margin-right: 10px;
            text-align: right;
            line-height: 34px;
            font-weight: bold;
        }
        .status {
            margin-left: 90px;
            line-height: 34px;
        }
        .progress {
            float: left;
            width: 800px;
            margin-top: 7px;
            margin-bottom: 0;
        }
        .progressBar {
            -webkit-transition: none;
            -moz-transition: none;
            -ms-transition: none;
            -o-transition: none;
            transition: none;
        }
        .scanButton {
            margin-left: 10px;
        }
    </ui:style>

    <b:Modal addStyleNames="{style.scanningView}" title="{mes.scanningTitle}" fade="true">
        <b:ModalBody>

            <g:FlowPanel addStyleNames="{style.section}">

                <g:Label addStyleNames="{style.label}" text="{mes.scanningStatus}" />
                <g:Label ui:field="statusLabel" addStyleNames="{style.status}" text="inactive" />

            </g:FlowPanel>

            <g:FlowPanel addStyleNames="{style.section}">

                <g:Label addStyleNames="{style.label}" text="{mes.scanningProgress}" />

                <b:Progress ui:field="progressContainer" addStyleNames="{style.progress}">
                    <b:ProgressBar ui:field="progressBar" addStyleNames="{style.progressBar}" type="INFO" />
                </b:Progress>

                <b:Button ui:field="scanButton" addStyleNames="{style.scanButton}" text="{mes.scanningButton}" />

            </g:FlowPanel>

        </b:ModalBody>
    </b:Modal>

</ui:UiBinder>