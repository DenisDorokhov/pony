<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:p="urn:import:net.dorokhov.pony.web.client.control">

    <ui:with field="mes" type="net.dorokhov.pony.web.client.resource.Messages" />

    <ui:style type="net.dorokhov.pony.web.client.mvp.library.ScanningView.MyStyle">
        @external .modal-dialog;
        .scanningView .modal-dialog {
            width: 1000px !important;
        }
        .section {
            clear: both;
        }
        .label {
            float: left;
            width: 80px;
            margin-right: 10px;
            text-align: right;
            line-height: 34px;
            font-weight: bold;
        }
        .status {
            margin-left: 90px;
            line-height: 34px;
        }
        .progressLabel {
            margin-top: -8px;
        }
        .progress {
            margin-left: 90px;
            margin-top: 7px;
            margin-bottom: 0;
        }
        .progressBar {
            -webkit-transition: none;
            -moz-transition: none;
            -ms-transition: none;
            -o-transition: none;
            transition: none;
        }
        .scanButton {
            float: right;
            margin-left: 10px;
        }
        .jobPagedView {
            height: 440px;
            margin-top: 15px;
        }
        .jobStatus {
            text-transform: uppercase;
            font-weight: bold;
        }
        .jobStatusStarting {
        }
        .jobStatusStarted {
            color: #337ab7;
        }
        .jobStatusComplete {
            color: #5cb85c;
        }
        .jobStatusFailed {
            color: #d9534f;
        }
        .jobStatusInterrupted {
            color: #f0ad4e;
        }
    </ui:style>

    <b:Modal ui:field="scanningView" addStyleNames="{style.scanningView}" title="{mes.scanningTitle}" fade="true">
        <b:ModalBody>

            <g:FlowPanel addStyleNames="{style.section}">

                <g:Label addStyleNames="{style.label}" text="{mes.scanningStatus}" />
                <g:Label ui:field="statusLabel" addStyleNames="{style.status}" text="inactive" />

            </g:FlowPanel>

            <g:FlowPanel addStyleNames="{style.section}">

                <g:Label addStyleNames="{style.label} {style.progressLabel}" text="{mes.scanningProgress}" />

                <b:Progress ui:field="progressContainer" addStyleNames="{style.progress}">
                    <b:ProgressBar ui:field="progressBar" addStyleNames="{style.progressBar}" type="INFO" />
                </b:Progress>

            </g:FlowPanel>

            <p:PagedListView ui:field="jobPagedView" addStyleNames="{style.jobPagedView}">
                <b:Button ui:field="scanButton" addStyleNames="{style.scanButton}" type="PRIMARY" text="{mes.scanningButton}" />
            </p:PagedListView>

        </b:ModalBody>
    </b:Modal>

</ui:UiBinder>