<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt">

    <ui:with field="mes" type="net.dorokhov.pony.web.client.resource.Messages" />

    <ui:style>
        @external .modal-dialog;
        @external .table;
        .scanningView .modal-dialog {
            width: 1000px !important;
        }
        .scanningView .table {
            margin-bottom: 0 !important;
            border: 0;
        }
        .section {
            clear: both;
        }
        .label {
            float: left;
            width: 80px;
            margin-right: 10px;
            text-align: right;
            line-height: 34px;
            font-weight: bold;
        }
        .status {
            margin-left: 90px;
            line-height: 34px;
        }
        .progress {
            float: left;
            width: 800px;
            margin-top: 7px;
            margin-bottom: 0;
        }
        .progressBar {
            -webkit-transition: none;
            -moz-transition: none;
            -ms-transition: none;
            -o-transition: none;
            transition: none;
        }
        .scanButton {
            margin-left: 10px;
            width: 68px;
        }
        .jobsTable .table > tbody > tr:first-child > td {
            border-top: 0;
        }
        .jobsTable .table > tbody > tr > td:first-child {
            border-left: 0;
        }
        .jobsTable .table > tbody > tr > td:last-child {
            padding-right: 15px;
            border-right: 0;
        }
        .jobsTable > div:last-child > div {
            border: 1px solid #ddd;
            border-top: 0;
        }
    </ui:style>

    <b:Modal addStyleNames="{style.scanningView}" title="{mes.scanningTitle}" fade="true">
        <b:ModalBody>

            <g:FlowPanel addStyleNames="{style.section}">

                <g:Label addStyleNames="{style.label}" text="{mes.scanningStatus}" />
                <g:Label ui:field="statusLabel" addStyleNames="{style.status}" text="inactive" />

            </g:FlowPanel>

            <g:FlowPanel addStyleNames="{style.section}">

                <g:Label addStyleNames="{style.label}" text="{mes.scanningProgress}" />

                <b:Progress ui:field="progressContainer" addStyleNames="{style.progress}">
                    <b:ProgressBar ui:field="progressBar" addStyleNames="{style.progressBar}" type="INFO" />
                </b:Progress>

                <b:Button ui:field="scanButton" addStyleNames="{style.scanButton}" type="PRIMARY" text="{mes.scanningButton}" />

            </g:FlowPanel>

            <b:Pager ui:field="jobsPager" previousText="Newer" nextText="Older" alignToSides="true"
                     previousIcon="ANGLE_DOUBLE_LEFT" nextIcon="ANGLE_DOUBLE_RIGHT" />

            <b.gwt:DataGrid ui:field="jobsTable" addStyleNames="{style.jobsTable}"
                            bordered="true" condensed="true" striped="true" hover="true"
                            width="100%" height="300px" />

        </b:ModalBody>
    </b:Modal>

</ui:UiBinder>