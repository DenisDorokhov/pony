<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field="img" type="net.dorokhov.pony.web.client.resource.Images" />

    <ui:style>
        .root {
            position: relative;
            background-color: #FFF;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .image {
            position: absolute;
            margin: auto;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            max-width: 100%;
            max-height: 100%;
        }

        .status {
            width: 20px;
            height: 20px;
        }

        .loadedImage {
            border-radius: 4px;
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="{style.root}">
        <g:Image ui:field="loadingImage" addStyleNames="{style.image} {style.status}" resource="{img.spinner}" />
        <g:Image ui:field="errorImage" addStyleNames="{style.image} {style.status}" resource="{img.error}" />
        <g:Image ui:field="loadedImage" addStyleNames="{style.image} {style.loadedImage}" />
    </g:HTMLPanel>

</ui:UiBinder>