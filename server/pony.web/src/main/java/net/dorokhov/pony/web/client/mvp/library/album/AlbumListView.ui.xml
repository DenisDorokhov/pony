<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:p="urn:import:net.dorokhov.pony.web.client.control">

    <ui:with field="mes" type="net.dorokhov.pony.web.client.resource.Messages" />

    <ui:style>
        .container {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }
        .albumList {
            top: 38px;
            overflow: auto;
        }
        .panel {
            margin-bottom: 0;
        }
    </ui:style>

    <g:FlowPanel addStyleNames="{style.container}">
        <b:Panel addStyleNames="{style.container} {style.panel}">

            <p:StatusIndicatorLoading ui:field="loadingIndicator" />
            <p:StatusIndicatorError ui:field="errorIndicator" />
            <p:StatusIndicatorEmpty ui:field="emptyIndicator" text="{mes.statusAlbumListEmpty}" />

            <b:PanelHeader ui:field="artistHeaderContainer">
                <b:Heading ui:field="artistHeader" size="H3" />
            </b:PanelHeader>

            <b:PanelBody ui:field="albumList" addStyleNames="{style.container} {style.albumList}" />

        </b:Panel>
    </g:FlowPanel>

</ui:UiBinder>