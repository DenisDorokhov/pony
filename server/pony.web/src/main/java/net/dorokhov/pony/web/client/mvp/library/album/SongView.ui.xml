<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .songView {
            width: 350px;
            height: 1.5em;
        }
        .trackNumber {
            float: left;
            width: 25px;
            text-align: right;
        }
        .name {
            float: left;
            width: 285px;
            padding-left: 10px;
            padding-right: 10px;
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
        }
        .duration {
            float: left;
            width: 40px;
            text-align: right;
        }
    </ui:style>

    <g:FlowPanel addStyleNames="{style.songView}">

        <g:Label ui:field="trackNumberLabel" styleName="{style.trackNumber}" />
        <g:Label ui:field="nameLabel" styleName="{style.name}" />
        <g:Label ui:field="durationLabel" styleName="{style.duration}" />

    </g:FlowPanel>

</ui:UiBinder>