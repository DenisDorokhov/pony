<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field="mes" type="net.dorokhov.pony.web.client.Messages" />

    <ui:style>
        .container {
            min-width: 800px;
        }
    </ui:style>

    <b:Container addStyleNames="{style.container}" fluid="true">
        <b:Row>
            <b:Column size="XS_2,SM_2,MD_2,LG_2">
                <b:Heading size="H1" text="{mes.libraryHeader}" />
            </b:Column>
            <b:Column size="XS_5,SM_5,MD_5,LG_5">
                <g:SimplePanel ui:field="playerContainer" />
            </b:Column>
            <b:Column size="XS_5,SM_5,MD_5,LG_5">
                <g:SimplePanel ui:field="toolbarContainer" />
            </b:Column>
        </b:Row>
        <b:Row>
            <b:Column size="LG_12">
                <g:SimplePanel ui:field="contentContainer" />
            </b:Column>
        </b:Row>
    </b:Container>

</ui:UiBinder>