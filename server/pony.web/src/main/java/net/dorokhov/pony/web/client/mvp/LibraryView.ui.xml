<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field="mes" type="net.dorokhov.pony.web.client.Messages" />

    <ui:style>
        .container {
            position: absolute;
            top: 20px;
            left: 20px;
            right: 20px;
            bottom: 20px;
            min-width: 900px;
        }
        .header {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 50px;
        }
        .title {
            position: absolute;
            top: 0;
            left: 0;
            width: 300px;
            bottom: 0;
        }
        .titleHeader {
            margin-top: 0;
        }
        .player {
            position: absolute;
            top: 0;
            left: 300px;
            right: 300px;
            bottom: 0;
        }
        .toolbar {
            position: absolute;
            top: 0;
            right: 0;
            width: 300px;
            bottom: 0;
        }
        .content {
            position: absolute;
            top: 50px;
            left: 0;
            right: 0;
            bottom: 0;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.container}">
        <div class="{style.header}">
            <div class="{style.title}">
                <b:Heading addStyleNames="{style.titleHeader}" size="H1" text="{mes.libraryHeader}" />
            </div>
            <div class="{style.player}">
                <g:SimplePanel ui:field="playerContainer" />
            </div>
            <div class="{style.toolbar}">
                <g:SimplePanel ui:field="toolbarContainer" />
            </div>
        </div>
        <div class="{style.content}">
            <g:SimplePanel ui:field="contentContainer" />
        </div>
    </g:HTMLPanel>

</ui:UiBinder>