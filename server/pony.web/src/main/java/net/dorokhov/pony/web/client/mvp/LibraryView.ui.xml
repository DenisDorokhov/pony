<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field="mes" type="net.dorokhov.pony.web.client.resource.Messages" />

    <ui:style>
        .container {
            position: absolute;
            top: 20px;
            left: 20px;
            right: 20px;
            bottom: 20px;
            min-width: 900px;
        }
        .header {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 50px;
        }
        .title {
            position: absolute;
            top: 0;
            left: 0;
            width: 300px;
            bottom: 0;
        }
        .titleHeader {
            margin-top: 0;
        }
        .player {
            position: absolute;
            top: 0;
            left: 300px;
            right: 400px;
            bottom: 0;
        }
        .toolbar {
            position: absolute;
            top: 0;
            right: 0;
            width: 400px;
            bottom: 0;
        }
        .content {
            position: absolute;
            top: 50px;
            left: 0;
            right: 0;
            bottom: 0;
        }
    </ui:style>

    <g:FlowPanel addStyleNames="{style.container}">
        <g:FlowPanel addStyleNames="{style.header}">
            <g:FlowPanel addStyleNames="{style.title}">
                <b:Heading addStyleNames="{style.titleHeader}" size="H1" text="{mes.libraryHeader}" />
            </g:FlowPanel>
            <g:FlowPanel addStyleNames="{style.player}">
                <g:SimplePanel ui:field="playerContainer" />
            </g:FlowPanel>
            <g:FlowPanel addStyleNames="{style.toolbar}">
                <g:SimplePanel ui:field="toolbarContainer" />
            </g:FlowPanel>
        </g:FlowPanel>
        <g:FlowPanel addStyleNames="{style.content}">
            <g:SimplePanel ui:field="contentContainer" />
        </g:FlowPanel>
    </g:FlowPanel>

</ui:UiBinder>