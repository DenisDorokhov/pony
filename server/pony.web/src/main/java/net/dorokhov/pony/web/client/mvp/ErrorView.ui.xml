<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field="mes" type="net.dorokhov.pony.web.client.message.Messages" />

    <ui:style>
        .errorText {
            text-align: center;
        }
    </ui:style>

    <g:HTMLPanel>
        <div class="{style.errorText}">
            <b:Heading size="H3" text="{mes.errorText}" />
            <b:Button ui:field="homeButton" type="PRIMARY" icon="HOME" text="{mes.errorHomeButton}" />
        </div>
    </g:HTMLPanel>

</ui:UiBinder>