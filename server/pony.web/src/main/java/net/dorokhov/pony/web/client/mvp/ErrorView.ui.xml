<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">

    <ui:with field="mes" type="net.dorokhov.pony.web.client.Messages" />

    <ui:style>
        .errorText {
            text-align: center;
        }
    </ui:style>

    <b:Container>
        <b.html:Div addStyleNames="{style.errorText}">
            <b:Heading size="H3" text="{mes.errorText}" />
            <b:Button ui:field="homeButton" type="PRIMARY" icon="HOME" text="{mes.errorHomeButton}" />
        </b.html:Div>
    </b:Container>

</ui:UiBinder>