<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:p="urn:import:net.dorokhov.pony.web.client.control">

    <ui:with field="mes" type="net.dorokhov.pony.web.client.resource.Messages" />

    <ui:style type="net.dorokhov.pony.web.client.mvp.library.LogView.MyStyle">
        @external .modal-dialog;
        .logView .modal-dialog {
            width: 1000px !important;
        }
        .messageView {
            height: 372px;
            margin-top: 5px;
        }
        .messageType {
            text-transform: uppercase;
            font-weight: bold;
        }
        .messageTypeDebug {
            color: #337ab7;
        }
        .messageTypeInfo {
            color: #5cb85c;
        }
        .messageTypeWarn {
            color: #f0ad4e;
        }
        .messageTypeError {
            color: #d9534f;
        }
    </ui:style>

    <b:Modal addStyleNames="{style.logView}" title="{mes.logTitle}" fade="true">
        <b:ModalBody>
            <p:PagedListView ui:field="messageView" addStyleNames="{style.messageView}" />
        </b:ModalBody>
    </b:Modal>

</ui:UiBinder>