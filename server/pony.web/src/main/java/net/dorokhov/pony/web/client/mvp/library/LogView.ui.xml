<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:p="urn:import:net.dorokhov.pony.web.client.control">

    <ui:with field="mes" type="net.dorokhov.pony.web.client.resource.Messages" />

    <ui:style>
        @external .modal-dialog;
        .logView .modal-dialog {
            width: 1000px !important;
        }
        .messageView {
            height: 372px;
        }
    </ui:style>

    <b:Modal addStyleNames="{style.logView}" title="{mes.scanningTitle}" fade="true">
        <b:ModalBody>
            <p:PagedListView ui:field="messageView" addStyleNames="{style.messageView}" />
        </b:ModalBody>
    </b:Modal>

</ui:UiBinder>