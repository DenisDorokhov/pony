<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:p="urn:import:net.dorokhov.pony.web.client.control">

    <ui:style>
        .playerView {
            position: relative;
            height: 67px;
            max-width: 500px;
            margin: 0 auto;
        }
        .backwardButton {
            margin-top: 14px;
            margin-right: 5px;
        }
        .playButton {
            margin-top: 12px;
            margin-right: 5px;
        }
        .forwardButton {
            margin-top: 14px;
        }
        .progress {
            position: absolute;
            bottom: 22px;
            left: 148px;
            right: 77px;
            margin-bottom: 0;
            cursor: pointer;
        }
        .artwork {
            position: absolute !important;
            bottom: 0;
            right: 0;
            width: 67px;
            height: 67px;
        }
    </ui:style>

	<g:FlowPanel ui:field="playerView" addStyleNames="{style.playerView}">

        <b:Button addStyleNames="{style.backwardButton}" icon="FAST_BACKWARD" />
        <b:Button addStyleNames="{style.playButton}" icon="PLAY" size="LARGE" />
        <b:Button addStyleNames="{style.forwardButton}" icon="FAST_FORWARD" />

        <b:Progress addStyleNames="{style.progress}">
            <b:ProgressBar type="INFO" percent="40" />
        </b:Progress>

        <p:ArtworkLoader ui:field="artworkLoader" addStyleNames="{style.artwork}" />

    </g:FlowPanel>

</ui:UiBinder>