<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:p="urn:import:net.dorokhov.pony.web.client.control">

    <ui:style>
        .playerView {
            position: relative;
            height: 67px;
            max-width: 700px;
            margin: 0 auto;
        }
        .backwardButton {
            margin-top: 14px;
            margin-right: 5px;
        }
        .playButton {
            margin-top: 12px;
            margin-right: 5px;
        }
        .forwardButton {
            margin-top: 14px;
        }
        .titleContainer {
            position: absolute;
            top: 0;
            left: 148px;
            right: 77px;
            text-align: center;
            cursor: pointer;
        }
        .titleContainer > div {
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
        }
        .titleContainer > div > span {
            padding: 3px;
            border-radius: 4px;
        }
        .titleContainer:hover > div > span, .titleContainer:focus > div > span {
            background-color: #f5f5f5;
        }
        .artistLabel {
            font-weight: bold;
        }
        .titleLabel {
            font-weight: bold;
        }
        .progress {
            position: absolute;
            left: 148px;
            right: 77px;
            bottom: 22px;
            margin-bottom: 0;
            cursor: pointer;
        }
        .timeLabel {
            position: absolute;
            left: 148px;
            bottom: 0;
            color: #909090;
        }
        .durationLabel {
            position: absolute;
            right: 77px;
            bottom: 0;
            color: #909090;
        }
        .artwork {
            position: absolute !important;
            bottom: 0;
            right: 0;
            width: 67px;
            height: 67px;
        }
    </ui:style>

	<g:FlowPanel ui:field="playerView" addStyleNames="{style.playerView}">

        <b:Button addStyleNames="{style.backwardButton}" icon="FAST_BACKWARD" />
        <b:Button addStyleNames="{style.playButton}" icon="PLAY" size="LARGE" />
        <b:Button addStyleNames="{style.forwardButton}" icon="FAST_FORWARD" />

        <g:FocusPanel addStyleNames="{style.titleContainer}">
            <g:HTMLPanel>
                <span><g:InlineLabel addStyleNames="{style.artistLabel}" text="Metallica" /> - <g:InlineLabel addStyleNames="{style.titleLabel}" text="Master Of Puppets" /></span>
            </g:HTMLPanel>
        </g:FocusPanel>

        <b:Progress addStyleNames="{style.progress}">
            <b:ProgressBar type="INFO" percent="40" />
        </b:Progress>

        <g:Label addStyleNames="{style.timeLabel}" text="00:00" />
        <g:Label addStyleNames="{style.durationLabel}" text="02:00" />

        <p:ArtworkLoader ui:field="artworkLoader" addStyleNames="{style.artwork}" />

    </g:FlowPanel>

</ui:UiBinder>